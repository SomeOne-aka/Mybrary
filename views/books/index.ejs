<h2 class="page-header">Search Books</h2>
<form action="/books" method="get">
  <div>
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= searchOptions.title %>" />
  </div>

  <div>
    <label for="title">Published after</label>
    <input
      type="date"
      name="publishedAfter"
      value="<%= searchOptions.publishedAfter %>"
    />
  </div>

  <div>
    <label for="title">Published before</label>
    <input
      type="date"
      name="publishedBefore"
      value="<%= searchOptions.publishedBefore %>"
    />
  </div>

  <input type="submit" value="Search" />
</form>
<br />

<div>
  <% books.forEach(book =>{ %>

  <a href="/books/<%= book.id %>">
    <img
      src="<%= book.coverImagePath %>"
      width="150"
      height="200"
      alt="<%= book.title %>"
    />
  </a>

  <% }) %>
</div>
