<h2 class="page-header">Search Books</h2>
<form action="/books" method="get">
  <div class="form-row">
    <div class="form-item">
      <label for="title">Title</label>
      <input type="text" name="title" value="<%= searchOptions.title %>" />
    </div>
  </div>

  <div class="form-row">
    <div class="form-item">
      <label for="title">Published after</label>
      <input
        type="date"
        name="publishedAfter"
        value="<%= searchOptions.publishedAfter %>"
      />
    </div>

    <div class="form-item">
      <label for="title">Published before</label>
      <input
        type="date"
        name="publishedBefore"
        value="<%= searchOptions.publishedBefore %>"
      />
    </div>
  </div>

  <div class="form-row form-row-end">
    <input class="btn btn-primary" type="submit" value="Search" />
  </div>
</form>
<br />

<div><%- include("../partials/bookGrid", {books, large:true}) %></div>
